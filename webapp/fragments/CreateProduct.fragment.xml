<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog
        id="createProductDialog"
        title="Create Product"
        draggable="true"
        resizable="true"
        class="sapUiContentPadding">

        <VBox class="sapUiSmallMargin">

            <Label text="Product ID"/>
            <Input id="prodIdInput"/>

            <Label text="Name"/>
            <Input id="nameInput"/>

            <Label text="Description"/>
            <Input id="descInput"/>

            <Label text="Release Date"/>
            <DatePicker id="releaseDateInput"/>

            <Label text="Discontinued Date"/>
            <DatePicker id="discontinuedDateInput"/>

            <Label text="Price"/>
            <Input id="priceInput" type="Number"/>

            <Label text="Rating"/>
            <Input id="ratingInput" type="Number"/>

        </VBox>

        <beginButton>
            <Button
                text="Save"
                type="Emphasized"
                press="onCreateConfirm"/>
        </beginButton>

        <endButton>
            <Button
                text="Cancel"
                press="onCreateCancel"/>
        </endButton>

    </Dialog>
</core:FragmentDefinition>
