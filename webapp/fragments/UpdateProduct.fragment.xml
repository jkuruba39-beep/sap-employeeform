<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog
        id="updateProductDialog"
        title="Update Product"
        draggable="true"
        resizable="true"
        class="sapUiContentPadding">

        <VBox class="sapUiSmallMargin">

            <!-- Product ID (Read Only) -->
            <Label text="Product ID"/>
            <Input
                id="updProdIdInput"
                editable="false"/>

            <Label text="Name"/>
            <Input id="updNameInput"/>

            <Label text="Description"/>
            <Input id="updDescInput"/>

            <Label text="Release Date"/>
            <DatePicker id="updReleaseDateInput"/>

            <Label text="Discontinued Date"/>
            <DatePicker id="updDiscontinuedDateInput"/>

            <Label text="Price"/>
            <Input
                id="updPriceInput"
                type="Number"/>

            <Label text="Rating"/>
            <Input
                id="updRatingInput"
                type="Number"/>

        </VBox>

        <beginButton>
            <Button
                text="Update"
                type="Emphasized"
                press="onUpdateConfirm"/>
        </beginButton>

        <endButton>
            <Button
                text="Cancel"
                press="onUpdateCancel"/>
        </endButton>

    </Dialog>
</core:FragmentDefinition>
