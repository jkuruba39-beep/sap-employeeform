<mvc:View 
   controllerName="antric.info.employeeform.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="Employee details">
         <OverflowToolbar id="fbar1">
                        <ToolbarSpacer id="toba" />
                         <SearchField
                            id="se1"
                            width="50%"
                            class="rightAlignSearchField"               
                            placeholder="Product id/ name"
                            search="onSearch"
                            />   
                        <Button id="b1" icon= "sap-icon://detail-view" press="onOpenVieweDialog" />
                        <Button id="b2" icon= "sap-icon://add" press="onCreateProduct" />
                        <Button id="b3" icon= "sap-icon://edit" press="onOpenUpdateDialog" />
                        <Button id="b4" icon= "sap-icon://delete" press="onDeleteProduct" />
                    </OverflowToolbar>
      <Table 
     items="{product>/Product}"
       id="idList"
      mode="SingleSelectMaster"
      selectionChange="onSelectionChange"
      
        >
         <columns> 
              <Column><Text text="Id"  /></Column>
              <Column><Text text="ProductName"  /></Column>
              <Column><Text text="Description"  /></Column>
              <Column><Text text="Released date"  /></Column>
              <Column><Text text="Discontinued date"  /></Column>
              <Column><Text text="Price"  /></Column>
             <Column><Text text="Rating"  /></Column>
         </columns>
         <items>
            <ColumnListItem >
            <cells>
           
            <Text text="{product>ID}"/>
             <Text text="{product>Name}"/>
              <Text text="{product>Description}"/>
               <Text text="{product>ReleaseDate}"/>
                <Text text="{product>DiscontinuedDate}"/>
                <Text text="{product>Rating}"  />
                <Text text="{product>Price}"  />
                </cells>

            </ColumnListItem>
         </items>
      </Table>
    </Page>
</mvc:View>
